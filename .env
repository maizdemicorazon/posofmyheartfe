# ===============================================
# 🌍 CONFIGURACIÓN DE ENTORNO
# ===============================================

# URL base de la API
VITE_API_BASE_URL_ROOT=posofmyheart.up.railway.app
VITE_API_BASE_URL="${VITE_API_BASE_URL_ROOT}/api/v1"

# 🔧 MODO DE DESARROLLO Y ENTORNO
VITE_PROFILE=production

# 🐛 CONFIGURACIÓN DE DEBUG
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# ⏱️ CONFIGURACIÓN DE TIMEOUTS
VITE_API_TIMEOUT=15000
VITE_RETRY_ATTEMPTS=3

# 📱 INFORMACIÓN DE LA APP
VITE_APP_NAME="POS Maíz de Mi Corazón"
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# 🌐 CONFIGURACIÓN DE ENTORNOS ESPECÍFICOS
VITE_DEVELOPMENT_API_URL=http://localhost:8081/api/v1
VITE_STAGING_API_URL=https://posofmyheart-develop.up.railway.app/api/v1
VITE_PRODUCTION_API_URL=https://posofmyheart.up.railway.app/api/v1

# 🔒 CONFIGURACIÓN DE SEGURIDAD (opcional)
VITE_ENABLE_DEVTOOLS=true

# 📊 CONFIGURACIÓN DE MÉTRICAS (opcional)
VITE_ENABLE_ANALYTICS=true